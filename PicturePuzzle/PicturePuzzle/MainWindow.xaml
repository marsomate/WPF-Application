<Window x:Class="PicturePuzzle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PicturePuzzle"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.Background>
        <ImageBrush ImageSource="..\PicturePuzzle\kepek\background.jpg"/>
    </Window.Background>

    <Window.Resources>
        <ControlTemplate x:Key="NoMouseOverButtonTemplate"   
                 TargetType="Button">
            <Border Background="{TemplateBinding Background}"  
          BorderBrush="{TemplateBinding BorderBrush}"  
          BorderThickness="{TemplateBinding BorderThickness}">
                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"  
                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
            </Border>

            <ControlTemplate.Triggers>
                <Trigger Property="IsEnabled"  
             Value="False">
                    <Setter Property="Background"  
              Value="{x:Static SystemColors.ControlLightBrush}" />
                    <Setter Property="Foreground"  
              Value="{x:Static SystemColors.GrayTextBrush}" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </Window.Resources>

    <Grid>
        <Button x:Name="button1"
                HorizontalAlignment="Left"
                Height="50"
                Width="50"
                Margin="326,131,0,0"
                VerticalAlignment="Top"
                Template="{StaticResource NoMouseOverButtonTemplate}" 
                Click="button1_Click">
            <Button.Background>
                <ImageBrush ImageSource="..\PicturePuzzle\kepek\kutya\kep1.jpg"/>
            </Button.Background>
        </Button>
        <Button x:Name="button2"
            HorizontalAlignment="Left"
            Height="50"
            Width="50"
            Margin="381,131,0,0"
            VerticalAlignment="Top"
            Template="{StaticResource NoMouseOverButtonTemplate}"
            Click="button2_Click">
            <Button.Background>
                <ImageBrush ImageSource="..\PicturePuzzle\kepek\kutya\kep2.jpg"/>
            </Button.Background>
        </Button>
        <Button x:Name="button3"
            HorizontalAlignment="Left"
            Height="50"
            Width="50"
            Margin="436,131,0,0"
            VerticalAlignment="Top"
            Template="{StaticResource NoMouseOverButtonTemplate}"
            Click="button3_Click">
            <Button.Background>
                <ImageBrush ImageSource="..\PicturePuzzle\kepek\kutya\kep3.jpg"/>
            </Button.Background>
        </Button>
        <Button x:Name="button4"
            HorizontalAlignment="Left"
            Height="50"
            Width="50"
            Margin="326,186,0,0"
            VerticalAlignment="Top"
            Template="{StaticResource NoMouseOverButtonTemplate}"
            Click="button4_Click">
            <Button.Background>
                <ImageBrush ImageSource="..\PicturePuzzle\kepek\kutya\kep4.jpg"/>
            </Button.Background>
        </Button>
        <Button x:Name="button5"
            HorizontalAlignment="Left"
            Height="50"
            Width="50"
            Margin="381,186,0,0"
            VerticalAlignment="Top"
            Template="{StaticResource NoMouseOverButtonTemplate}"
            Click="button5_Click">
            <Button.Background>
                <ImageBrush ImageSource="..\PicturePuzzle\kepek\kutya\kep5.jpg"/>
            </Button.Background>
        </Button>
        <Button x:Name="button6"
            HorizontalAlignment="Left"
            Height="50"
            Width="50"
            Margin="436,186,0,0"
            VerticalAlignment="Top"
            Template="{StaticResource NoMouseOverButtonTemplate}"
            Click="button6_Click">
            <Button.Background>
                <ImageBrush ImageSource="..\PicturePuzzle\kepek\kutya\kep6.jpg"/>
            </Button.Background>
        </Button>
        <Button x:Name="button7"
            HorizontalAlignment="Left"
            Height="50"
            Width="50"
            Margin="326,241,0,0"
            VerticalAlignment="Top"
            Template="{StaticResource NoMouseOverButtonTemplate}"
            Click="button7_Click">
            <Button.Background>
                <ImageBrush ImageSource="..\PicturePuzzle\kepek\kutya\kep7.jpg"/>
            </Button.Background>
        </Button>
        <Button x:Name="button8"
            HorizontalAlignment="Left"
            Height="50"
            Width="50"
            Margin="381,241,0,0"
            VerticalAlignment="Top"
            Template="{StaticResource NoMouseOverButtonTemplate}"
            Click="button8_Click">
            <Button.Background>
                <ImageBrush ImageSource="..\PicturePuzzle\kepek\kutya\kep8.jpg"/>
            </Button.Background>
        </Button>
        <Button x:Name="empty"
            Content=""
            HorizontalAlignment="Left"
            Height="50"
            Width="50"
            Margin="436,241,0,0"
            Template="{StaticResource NoMouseOverButtonTemplate}"
            VerticalAlignment="Top"/>
        <Button x:Name="randomButton"
            Content="Randomize"
            HorizontalAlignment="Left"
            Margin="653,33,0,0"
            VerticalAlignment="Top"
            Height="34"
            Width="77"
            Click="RandomButton_Click"/>

    </Grid>
</Window>
